@using Spar.Retail.UI.Models.Account
@model LoginViewModel

@{
    ViewBag.Title = "Login Page";
    ViewBag.Description = "login page";
    Layout = "~/Views/Shared/_Empty.cshtml";
}
@using System
@using System.Threading.Tasks

<div class="login-container animated fadeInDown">
    <div class="loginbox bg-white">
        <div class="loginbox-title">SIGN IN</div>
        <div class="loginbox-social">
            <div class="social-title ">Connect with Your Social Accounts</div>
            <div class="social-buttons">
                <a href="" class="button-facebook">
                    <i class="social-icon fa fa-facebook"></i>
                </a>
                <a href="" class="button-twitter">
                    <i class="social-icon fa fa-twitter"></i>
                </a>
                <a href="" class="button-google">
                    <i class="social-icon fa fa-google-plus"></i>
                </a>
            </div>
        </div>
        <div class="loginbox-or">
            <div class="or-line"></div>
            <div class="or">OR</div>
        </div>
        @using (var form = Html.BeginForm("Login", "Account"))
        {
            @Html.AntiForgeryToken()
            <div class="loginbox-textbox">
                @Html.TextBoxFor(t => t.Email)
            </div>
            <div class="loginbox-textbox">
                @Html.PasswordFor(t => t.Password)
            </div>
            <div class="loginbox-forgot">
                <a href="">Forgot Password?</a>
            </div>
            <div class="loginbox-submit">
                <input type="submit" value="Login" />                
            </div>
            <div class="loginbox-signup">
                @Html.ActionLink("Sign Up With Email", "Register")
            </div>
        }
    </div>
    <div class="logobox">
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}