@{
    ViewBag.Title = "Order History";
    Layout = "~/Views/Shared/_RetailerDefault.cshtml";
}

<h2>Orde rHistory</h2>

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="well">
            <div class="row">
                <table class="table table-striped table-bordered table-hover table-condensed" id="tblProduct">
                    <thead class="flip-content bordered-palegreen">
                        <tr>
                            <th>
                                Order Id
                            </th>
                            <th>
                                User
                            </th>
                            <th>
                                Order Date
                            </th>
                            <th>
                                Supplier Name
                            </th>
                            <th>
                                Supplier Code
                            </th>
                            <th>
                                TotalProducts
                            </th>
                            <th>
                                TotalPrice
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section PageScripts{
    <script>
        $(document).ready(function () {

            $('#tblProduct').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "type": "POST",
                    "url": "@Url.Action("OrderHistoryDataTableAjax", "OrderHistory")"
                },
                "columns": [
                    { "data": "OrderId" },
                    { "data": "UserId" },
                    { "data": "OrderDate" },
                    { "data": "SupplierName" },
                    { "data": "SupplierCode" },
                    { "data": "TotalProducts" },
                    { "data": "TotalPrice" }
                ]
            });

        });
    </script>
}
