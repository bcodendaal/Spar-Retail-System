@model Spar.Retail.UI.Models.ViewModels.Retailer.Orders.ProductsOrderViewModel
@{
    ViewBag.Title = "Order Products";
    Layout = "~/Views/Shared/_RetailerDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="well">
            <div class="row">
                <div class="col-xs-5">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h6>Supplier: @Model.Supplier.SupplierName</h6>
                        </div>
                        <div class="panel-body">
                            <ul>
                                <li>
                                    @Model.Supplier.SupplierCode
                                </li>
                                <li>@Model.Supplier.VATNumber</li>
                                <li>@Model.Supplier.Telephone</li>
                                <li>@Model.Supplier.Fax</li>
                                <li>
                                    @Model.Supplier.AddressLine1<br />
                                    @Model.Supplier.AddressLine2<br />
                                    @Model.Supplier.AddressLine3
                                </li>
                                <li>
                                    @Model.Supplier.PostalCode
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xs-7">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h6>Order: @Model.Order.OrderBasketId</h6>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-6">
                                    <ul>
                                        <li>
                                            Status: @Model.Order.OrderBasketStatus
                                        </li>
                                        <li>
                                            UserId : @Model.Order.UserId
                                        </li>
                                        <li>
                                            Created on: @Model.Order.CreatedOn
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">

                                    Products : <label id="orderProductTotal"></label>
                                </div>
                                <div class="col-xs-3">
                                    Total Price : <label id="orderPriceTotal"></label>
                                </div>
                                <div class="col-xs-3">
                                    <button>View Products</button>
                                </div>
                                <div class="col-xs-3">
                                    <button id="btnFinalize">Finalize Order</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <table class="table table-striped table-bordered table-hover table-condensed" id="tblProduct">
                    <thead class="flip-content bordered-palegreen">
                        <tr>
                            <th>
                                ProductCode
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                VAT
                            </th>
                            <th>
                                Barcode
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                UnitOfMeasure
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                PackSize
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section PageScripts{
    <script>

        /****************Document Ready *******************/
        $(document).ready(function() {
            InitializeProductTable();
            GetOrderQuantityPrice();
            $('#btnFinalize').click(function() {
                FinalizeOrder();
            });
        });

        /**************** END Document Ready *******************/


        function FinalizeOrder() {
            $.ajax({
                url: '@Url.Action("FinalizeOrder", "OpenOrder")',
                data: {
                    orderId: '@Model.Order.OrderBasketId'
                },
                success: function(data) {
                    if (data.Success) {
                        if (confirm('Succesully Finalized Order.  Redirect To Order History?')) {
                            window.location.replace("/OrderHistory/OrderHistory");
                        } else {
                            window.location.replace("/RetailerDashboard");
                        }
                    } else {
                        alert("Unexpected error occured");
                    }
                },
                error: function(e) {
                    console.log(e);
                }
            });
        }

        function GetOrderQuantityPrice() {
            $.ajax({
                url: '@Url.Action("GetOpenOrderTotals", "OpenOrder")',
                data: {
                    orderId: '@Model.Order.OrderBasketId'
                },
                success: function(data) {
                    $('#orderProductTotal').text(data.TotalProducts);
                    $('#orderPriceTotal').text(data.TotalPrice);
                },
                error: function(e) {
                    console.log(e);
                }
            });
        }

        function AddProductToOrder(button) {

            var productId = button.data('productid');
            var quantity = $('#quantity_' + productId).val();
            if (ValidateElement($('#quantity_' + productId))) {
                $.ajax({
                    url: '@Url.Action("AddItemToBasket", "OpenOrder")',
                    data: {
                        basketId: @Model.Order.OrderBasketId,
                        productId: productId,
                        supplierId: @Model.Supplier.SupplierId,
                        quantity: quantity
                    },
                    success: function(data) {
                        // If a product is already in the Open Order, the user should have te option to update the item with the new quantity
                        if (data.Success) {
                            if (data.DuplicateProduct) {
                                if (confirm("A duplicate product already exists for this order with quantity " + data.ProductQuantity + ".  Update with new Quantity?")) {
                                    UpdateProductQuantity(productId, quantity);
                                }
                            } else {
                                GetOrderQuantityPrice(); //ToDo:Refactor here
                            }
                        } else {
                            alert("Unexpected Server Error");
                        }


                    },
                    error: function(data) {
                        alert('Error Adding Item to order');
                        console.log(data);
                    }

                });
            }

        }


        function UpdateProductQuantity(productId, quantity) {
            $.ajax({
                url: '@Url.Action("UpdateProductQuantity", "OpenOrder")',
                data: {
                    basketId: @Model.Order.OrderBasketId,
                    productId: productId,
                    supplierId: @Model.Supplier.SupplierId,
                    quantity: quantity
                },
                success: function(data) {
                    if (data.Success) {
                        alert("Succesfully Updated Quanitity");
                        GetOrderQuantityPrice(); //ToDo:Refactor here
                    } else {
                        alert("Unexpected Server Error");
                    }
                },
                error: function(data) {
                    alert('Error Adding Item to order');
                    console.log(data);
                }

            });
        }

        function SetUpTabNavigation() {

            var addButtons = $('[data-function="addproduct"]');
            var quantityText = $('[data-function="quantity"]');
            var searchButton = $('#tblProduct_filter input[type="search"]');

            addButtons.last().keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    searchButton.focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

            searchButton.keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    quantityText.first().focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

        }

        function InitializeProductTable() {
            $('#tblProduct').dataTable({
                "processing": true,
                "serverSide": true,
                "pageLength": 25,
                "ajax": {
                    "type": "POST",
                    "url": "@Url.Action("ProductsDataTableAjax", "OpenOrder")",
                    "async": false,
                    "data": function(d) {
                        d.additionalParams = {
                            "SupplierId": '@Model.Supplier.SupplierId'
                        };
                    },
                    "complete": function() {
                        SetUpTabNavigation();
                    }
                },
                "columns": [
                    { "data": "ProductCode" },
                    { "data": "ProductName" },
                    { "data": "ProductDescription" },
                    { "data": "VAT" },
                    { "data": "Barcode" },
                    { "data": "CategoryId" },
                    { "data": "UnitOfMeasureName" },
                    { "data": "Price" },
                    { "data": "PackSize" },
                    {
                        "targets": -1,
                        "data": "ProductId",
                        "render": function(data, type, full, meta) {
                            return '<input data-function="quantity" data id="quantity_' + data + '" type="number"></input>&nbsp; <button onclick="AddProductToOrder($(this));" data-function="addproduct" data-productid="' + data + '">Add To Order</button>';
                        }
                    }
                ]
            });

        }
    </script>
}


