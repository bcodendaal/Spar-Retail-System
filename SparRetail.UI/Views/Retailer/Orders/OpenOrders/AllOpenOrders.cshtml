@{
    ViewBag.Title = "Open Orders";
    Layout = "~/Views/Shared/_RetailerDefault.cshtml";
}
<div class="well well-sm with-header">
    <div class="header bordered-azure"><i class="menu-icon fa fa-truck"></i>&nbsp;Select Order</div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="well">
                <div class="row">
                    <table class="table table-striped table-bordered table-hover table-condensed" id="tblProduct">
                        <thead class="flip-content bordered-palegreen">
                            <tr>
                                <th>
                                    Order Id
                                </th>
                                <th>
                                    Supplier Name
                                </th>
                                <th>
                                    Supplier Code
                                </th>
                                <th>
                                    User Id
                                </th>
                                <th>
                                    Created On
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section PageScripts{
    <script>
        $(document).ready(function () {

            $('#tblProduct').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "type": "POST",
                    "url": "@Url.Action("OpenOrdersDataTableAjax", "OpenOrder")"
                },
                "columns": [
                    { "data": "OrderBasketId" },
                    { "data": "SupplierName" },
                    { "data": "SupplierCode" },
                    { "data": "UserId" },
                    { "data": "CreatedOn" },
                    { "data": "OrderBasketStatus" },
                    {
                        "targets": -1,
                        "data": "OrderBasketId",
                        "render": function (data, type, full, meta) {
                            return '<a href="/OpenOrder/AddProducts/?orderId=' + data + '">Add Products</a> | ' +
                                '<a href="/OpenOrder/OrderDetail?OpenOrderId=' + data + '">View Order Details</a>';
                        }
                    }
                ]
            });

        });
    </script>
}
