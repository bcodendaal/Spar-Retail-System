@using Spar.Retail.UI.Models.ViewModels.Retailer.Orders
@model Spar.Retail.UI.Models.ViewModels.Retailer.Orders.ProductsOrderViewModel
@{
    ViewBag.Title = "Order Products";
    Layout = "~/Views/Shared/_RetailerDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="well">
            @Html.Partial("~/Views/Retailer/Orders/_OpenOrderDetailsHeader.cshtml", new OpenOrderDetailViewModel()
            {
                Supplier = Model.Supplier,
                OrderDetails = Model.Order
            })

            <button class="btn btn-info shiny" onclick="location.href='/OpenOrder/OrderDetail?OpenOrderId=@Model.Order.OrderBasketId' "> <i class="typcn typcn-document-text"></i>&nbsp;Order Detail</button>
            <button class="btn btn-success shiny" id="btnFinalize"> <i class="fa fa-check right"></i>&nbsp;Finalize Order</button>
            <div>&nbsp;</div>

            <table class="table table-striped table-bordered table-hover table-condensed" id="tblProduct">
                <thead class="flip-content bordered-palegreen">
                    <tr>
                        <th>
                            ProductCode
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            VAT
                        </th>
                        <th>
                            Barcode
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            UnitOfMeasure
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            PackSize
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section PageScripts{
    <script>

        /****************Document Ready *******************/
        $(document).ready(function() {
            InitializeProductTable();
            GetOrderQuantityPrice();
            $('#btnFinalize').click(function() {
                FinalizeOrder();
            });
        });

        /**************** END Document Ready *******************/


        function FinalizeOrder() {
            bootbox.confirm("Clicking confirm wil send this order to the supplier.  This is the final step.<br/><br/>Are you sure you want to finalize this order?  ", function(result) {
                if (result) {

                    $.ajax({
                        url: '@Url.Action("FinalizeOrder", "OpenOrder")',
                        data: {
                            orderId: '@Model.Order.OrderBasketId'
                        },
                        success: function(data) {
                            if (data.Success) {
                                if (confirm('Succesully Finalized Order.  Redirect To Order History?')) {
                                    window.location.replace("/OrderHistory/OrderHistory");
                                } else {
                                    window.location.replace("/RetailerDashboard");
                                }
                            } else {
                                alert("Unexpected error occured");
                            }
                        },
                        error: function(e) {
                            console.log(e);
                        }
                    });
                }
            });
        };

        function GetOrderQuantityPrice() {
            $.ajax({
                url: '@Url.Action("GetOpenOrderTotals", "OpenOrder")',
                data: {
                    orderId: '@Model.Order.OrderBasketId'
                },
                success: function(data) {
                    $('#orderProductTotal').text(data.TotalProducts);
                    $('#orderPriceTotal').text(data.TotalPrice);
                },
                error: function(e) {
                    console.log(e);
                }
            });
        };

        function AddProductToOrder(button) {

            var productId = button.data('productid');
            var quantity = $('#quantity_' + productId).val();
            if (ValidateElement($('#quantity_' + productId))) {
                $.ajax({
                    url: '@Url.Action("AddItemToBasket", "OpenOrder")',
                    data: {
                        basketId: @Model.Order.OrderBasketId,
                        productId: productId,
                        supplierId: @Model.Supplier.SupplierId,
                        quantity: quantity
                    },
                    success: function(data) {
                        // If a product is already in the Open Order, the user should have te option to update the item with the new quantity
                        if (data.Success) {
                            if (data.DuplicateProduct) {
                                ConfirmQuantity(data.ProductQuantity, quantity, data.orderBasketItemId);
                            } else {
                                Notify('Succesfully added to order.', 'top-right', '5000', 'success', 'fa-check', true);
                                GetOrderQuantityPrice(); //ToDo:Refactor here
                            }
                        } else {
                            alert("Unexpected Server Error");
                        }


                    },
                    error: function(data) {
                        alert('Error Adding Item to order');
                        console.log(data);
                    }

                });
            }

        };


        function UpdateProductQuantity(orderBasketItemId, quantity) {
            $.ajax({
                url: '@Url.Action("UpdateProductQuantity", "OpenOrder")',
                data: {
                    basketId: @Model.Order.OrderBasketId,
                    orderBasketItemId: orderBasketItemId,
                    supplierId: @Model.Supplier.SupplierId,
                    quantity: quantity
                },
                success: function(data) {
                    if (data.Success) {
                        Notify('Succesfully added to order.', 'top-right', '5000', 'success', 'fa-check', true);
                        GetOrderQuantityPrice(); //ToDo:Refactor here
                    } else {
                        alert("Unexpected Server Error");
                    }
                },
                error: function(data) {
                    alert('Error Adding Item to order');
                    console.log(data);
                }

            });
        };

        function SetUpTabNavigation() {

            var addButtons = $('[data-function="addproduct"]');
            var quantityText = $('[data-function="quantity"]');
            var searchButton = $('#tblProduct_filter input[type="search"]');

            searchButton.focus();

            addButtons.last().keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    searchButton.focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

            searchButton.keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    quantityText.first().focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

        };

        function InitializeProductTable() {
            $('#tblProduct').dataTable({
                "processing": true,
                "serverSide": true,
                "sDom": "Tfltr<'row DTTTFooter'<'col-sm-6'i><'col-sm-6'p>>",
                "language": {
                    "search": "",
                    "sLengthMenu": "_MENU_",
                    "oPaginate": {
                        "sPrevious": "Prev",
                        "sNext": "Next"
                    },
                    "infoFiltered": ""
                },
                "pageLength": 25,
                "ajax": {
                    "type": "POST",
                    "url": "@Url.Action("ProductsDataTableAjax", "OpenOrder")",
                    "async": false,
                    "data": function(d) {
                        d.additionalParams = {
                            "SupplierId": '@Model.Supplier.SupplierId'
                        };
                    },
                    "complete": function() {
                        SetUpTabNavigation();
                    }
                },
                "columns": [
                    {
                        "data": "ProductCode",
                        "defaultContent": " "
                    },
                    {
                        "data": "ProductName",
                        "defaultContent": " "
                    },
                    {
                        "data": "ProductDescription",
                        "defaultContent": " "
                    },
                    {
                        "data": "VAT",
                        "defaultContent": " "
                    },
                    {
                        "data": "Barcode",
                        "defaultContent": " "
                    },
                    {
                        "data": "CategoryId",
                        "defaultContent": " "
                    },
                    {
                        "data": "UnitOfMeasureName",
                        "defaultContent": " "
                    },
                    {
                        "data": "Price",
                        "defaultContent": " "
                    },
                    {
                        "data": "PackSize",
                        "defaultContent": " "
                    },
                    {
                        "targets": -1,
                        "data": "ProductId",
                        "orderable": false,
                        "render": function(data, type, full, meta) {
                            return '<input data-validationtype="number" data-function="quantity" data id="quantity_' + data + '" type="number"></input>&nbsp; <button class="btn btn-xs btn-palegreen" onclick="AddProductToOrder($(this));" data-function="addproduct" data-productid="' + data + '"><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;Order</button>';
                        }
                    }
                ]
            });

        };


        function ConfirmQuantity(count, newQuantity, productId) {

            bootbox.confirm(count + " unit/s of the same product has already been added to this order.  <br/><br/>Update with to " + newQuantity + "?", function(result) {
                if (result) {
                    UpdateProductQuantity(productId, newQuantity);
                }
            });
            $('[data-bb-handler="success"]').focus();
        };
    </script>
}


