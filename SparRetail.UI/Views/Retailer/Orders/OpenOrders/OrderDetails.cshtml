@model Spar.Retail.UI.Models.ViewModels.Retailer.Orders.OpenOrderDetailViewModel
@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_RetailerDefault.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="well">
            @Html.Partial("~/Views/Retailer/Orders/_OpenOrderDetailsHeader.cshtml", Model)

            <button class="btn btn-info shiny" onclick="location.href='/OpenOrder/AddProducts/?orderId=@Model.OrderDetails.OrderBasketId'"> <i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;Add more products</button>
            <button class="btn btn-success shiny" id="btnFinalize"> <i class="fa fa-check right"></i>&nbsp;Finalize Order</button>
            <div>&nbsp;</div>

            <table class="table table-striped table-bordered table-hover table-condensed" id="tblOpenOrderItems">
                <thead class="flip-content bordered-palegreen">
                    <tr>
                        <th>
                            ProductCode
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Barcode
                        </th>
                        <th>
                            UnitOfMeasure
                        </th>
                        <th>
                            NumberOfUnits
                        </th>
                        <th>
                            PricePerUnit
                        </th>
                        <th>
                            TotalPrice
                        </th>
                        <th>
                            CreatedOn
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section PageScripts{
    <script>
        /****************Document Ready *******************/
        $(document).ready(function() {
            InitializeProductTable();
            $('#btnFinalize').click(function() {
                ConfirmFinalize();
            });
        });

        /**************** END Document Ready *******************/

        function InitializeProductTable() {
            $('#tblOpenOrderItems').dataTable({
                "processing": true,
                "serverSide": true,
                "sDom": "Tfltr<'row DTTTFooter'<'col-sm-6'i><'col-sm-6'p>>",
                "language": {
                    "search": "",
                    "sLengthMenu": "_MENU_",
                    "oPaginate": {
                        "sPrevious": "Prev",
                        "sNext": "Next"
                    },
                    "infoFiltered": ""
                },
                "pageLength": 15,
                "ajax": {
                    "type": "POST",
                    "url": "@Url.Action("OpenOrderItemDataTableAjax", "OpenOrder")",
                    "async": false,
                    "data": function(d) {
                        d.additionalParams = {
                            "OpenOrderId": '@Model.OrderDetails.OrderBasketId'
                        };
                    },
                    "complete": function() {
                        SetUpTabNavigation();
                    }
                },
                "columns": [
                    {
                        "data": "ProductCode",
                        "defaultContent": " "
                    },
                    {
                        "data": "ProductName",
                        "defaultContent": " "
                    },
                    {
                        "data": "BarCode",
                        "defaultContent": " "
                    },
                    {
                        "data": "UnitOfMeasure",
                        "defaultContent": " "
                    },
                    {
                        "data": "NumberOfUnits",
                        "defaultContent": " "
                    },
                    {
                        "data": "PricePerUnit",
                        "defaultContent": " "
                    },
                    {
                        "data": "TotalPrice",
                        "defaultContent": " "
                    },
                    {
                        "data": "CreatedOn",
                        "defaultContent": " "
                    },
                    {
                        "targets": -1,
                        "data": "RetailerOrderBasketItemId",
                        "render": function(data, type, full, meta) {
                            return '<input data-validationtype="number" data-function="quantity" data id="quantity_' + data + '" type="number"></input>&nbsp; <button class="btn btn-blue btn-xs" onclick="UpdateProductQuantity($(this));" data-function="updateproduct" data-orderbasketitemid="' + data + '">Update Quantity</button>';
                        }
                    }
                ]
            });

        };

        function UpdateProductQuantity(button) {
            var orderBasketItemId = button.data('orderbasketitemid');
            var quantity = $('#quantity_' + orderBasketItemId).val();
            if (quantity === 0 || ValidateElement($('#quantity_' + orderBasketItemId))) {
                $.ajax({
                    url: '@Url.Action("UpdateProductQuantity", "OpenOrder")',
                    data: {
                        basketId: @Model.OrderDetails.OrderBasketId,
                        orderBasketItemId: orderBasketItemId,
                        supplierId: @Model.Supplier.SupplierId,
                        quantity: quantity
                    },
                    success: function(data) {
                        if (data.Success) {
                            $('#tblOpenOrderItems').dataTable()._fnAjaxUpdate();
                            GetOrderQuantityPrice(); //ToDo:Refactor here
                        } else {
                            alert("Unexpected Server Error");
                        }
                    },
                    error: function(data) {
                        alert('Error Adding Item to order');
                        console.log(data);
                    }

                });
            }
        };

        function SetUpTabNavigation() {

            var addButtons = $('[data-function="updateproduct"]');
            var quantityText = $('[data-function="quantity"]');
            var searchButton = $('#tblOpenOrderItems_filter input[type="search"]');

            searchButton.focus();

            addButtons.last().keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    searchButton.focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

            searchButton.keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    quantityText.first().focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

        };


    </script>
}
