@model Spar.Retail.UI.Models.ViewModels.Retailer.Orders.OpenOrderDetailViewModel
@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_RetailerDefault.cshtml";
}

<h2>Order Details</h2>
<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="well">
            @Html.Partial("~/Views/Retailer/Orders/_OpenOrderDetailsHeader.cshtml", Model)

            <div class="row">
                <button id="btnFinalize">Finalize Order</button>
            </div>

            <div class="row">
                <table class="table table-striped table-bordered table-hover table-condensed" id="tblOpenOrderItems">
                    <thead class="flip-content bordered-palegreen">
                        <tr>
                            <th>
                                ProductCode
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Barcode
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                UnitOfMeasure
                            </th>
                            <th>
                                NumberOfUnits
                            </th>
                            <th>
                                PricePerUnit
                            </th>
                            <th>
                                TotalPrice
                            </th>
                            <th>
                                CreatedOn
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section PageScripts{
    <script>
        /****************Document Ready *******************/
        $(document).ready(function() {
            InitializeProductTable();
        });

        /**************** END Document Ready *******************/

        function InitializeProductTable() {
            $('#tblOpenOrderItems').dataTable({
                "processing": true,
                "serverSide": true,
                "pageLength": 25,
                "ajax": {
                    "type": "POST",
                    "url": "@Url.Action("OpenOrderItemDataTableAjax", "OpenOrder")",
                    "async": false,
                    "data": function(d) {
                        d.additionalParams = {
                            "OpenOrderId": '@Model.OrderDetails.OrderBasketId'
                        };
                    },
                    "complete": function() {
                        SetUpTabNavigation();
                    }
                },
                "columns": [
                    { "data": "ProductCode" },
                    { "data": "ProductName" },
                    { "data": "BarCode" },
                    { "data": "UnitOfMeasure" },
                    { "data": "NumberOfUnits" },
                    { "data": "PricePerUnit" },
                    { "data": "TotalPrice" },
                    { "data": "CreatedOn" },
                    {
                        "targets": -1,
                        "data": "RetailerOrderBasketItemId",
                        "render": function(data, type, full, meta) {
                            return '<input data-validationtype="number" data-function="quantity" data id="quantity_' + data + '" type="number"></input>&nbsp; <button onclick="UpdateProductQuantity($(this));" data-function="updateproduct" data-productid="' + data + '">Update Quantity</button>';
                        }
                    }
                ]
            });

        };


        function AddProductToOrder(button) {

            var productId = button.data('productid');
            var quantity = $('#quantity_' + productId).val();
            if (ValidateElement($('#quantity_' + productId))) {
                $.ajax({
                    url: '@Url.Action("AddItemToBasket", "OpenOrder")',
                    data: {
                        basketId: @Model.OrderDetails.OrderBasketId,
                        productId: productId,
                        supplierId: @Model.Supplier.SupplierId,
                        quantity: quantity
                    },
                    success: function(data) {
                        // If a product is already in the Open Order, the user should have te option to update the item with the new quantity
                        if (data.Success) {
                            if (data.DuplicateProduct) {
                                if (confirm("A duplicate product already exists for this order with quantity " + data.ProductQuantity + ".  Update with new Quantity?")) {
                                    UpdateProductQuantity(productId, quantity);
                                }
                            } else {
                                GetOrderQuantityPrice(); //ToDo:Refactor here
                            }
                        } else {
                            alert("Unexpected Server Error");
                        }


                    },
                    error: function(data) {
                        alert('Error Adding Item to order');
                        console.log(data);
                    }

                });
            }

        };


        function UpdateProductQuantity(button) {
            var productId = button.data('productid');
            var quantity = $('#quantity_' + productId).val();
            if (quantity === 0 || ValidateElement($('#quantity_' + productId))) {
                $.ajax({
                    url: '@Url.Action("UpdateProductQuantity", "OpenOrder")',
                    data: {
                        basketId: @Model.OrderDetails.OrderBasketId,
                        productId: productId,
                        supplierId: @Model.Supplier.SupplierId,
                        quantity: quantity
                    },
                    success: function(data) {
                        if (data.Success) {
                            $('#tblOpenOrderItems').dataTable()._fnAjaxUpdate();
                            GetOrderQuantityPrice(); //ToDo:Refactor here
                        } else {
                            alert("Unexpected Server Error");
                        }
                    },
                    error: function(data) {
                        alert('Error Adding Item to order');
                        console.log(data);
                    }

                });
            }
        };

        function GetOrderQuantityPrice() {
            $.ajax({
                url: '@Url.Action("GetOpenOrderTotals", "OpenOrder")',
                data: {
                    orderId: '@Model.OrderDetails.OrderBasketId'
                },
                success: function(data) {
                    $('#orderProductTotal').text(data.TotalProducts);
                    $('#orderPriceTotal').text(data.TotalPrice);
                },
                error: function(e) {
                    console.log(e);
                }
            });
        };


        function SetUpTabNavigation() {

            var addButtons = $('[data-function="updateproduct"]');
            var quantityText = $('[data-function="quantity"]');
            var searchButton = $('#tblOpenOrderItems_filter input[type="search"]');

            addButtons.last().keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    searchButton.focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

            searchButton.keydown(function(e) {
                var TABKEY = 9;
                if (e.keyCode == TABKEY) {
                    quantityText.first().focus();
                    if (e.preventDefault) {
                        e.preventDefault();
                    }
                    return false;
                };
            });

        };


        function FinalizeOrder() {
            $.ajax({
                url: '@Url.Action("FinalizeOrder", "OpenOrder")',
                data: {
                    orderId: '@Model.OrderDetails.OrderBasketId'
                },
                success: function(data) {
                    if (data.Success) {
                        if (confirm('Succesully Finalized Order.  Redirect To Order History?')) {
                            window.location.replace("/OrderHistory/OrderHistory");
                        } else {
                            window.location.replace("/RetailerDashboard");
                        }
                    } else {
                        alert("Unexpected error occured");
                    }
                },
                error: function(e) {
                    console.log(e);
                }
            });
        };
    </script>
}
